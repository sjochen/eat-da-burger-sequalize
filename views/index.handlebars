<div id="search-bar" class="jumbotron shadow">
    <h1 class="display-3 text-center foo">Bob's Special Burgers</h1>
<h2 class="foo">Add a Burger</h2>
<form class="create-form">

    <div  class="form-group foo">
        <label for="ca">Burger Name:</label>
        <input type="text" id="ca" name="name">
    </div>


    <button type="submit">Add Burger</button>
</form>
</div>



<div class="row">
    <div class="col-1"></div>
    <div class="col-4 bod">
        <h2 class="text-danger">Burgers that need to be devoured</h2>
        {{#each burgers}}
        {{#unless devoured}}
        <div class="bg-info m-2 shadow col-12">
            <h2 class="float-left">{{this.burger_name}}</h2><button data-id={{this.id}} class="float-right change-devour">Devour</button>
        </div>
        {{/unless}}
        {{/each}}
    </div>


    <div class="col-2"></div>



    <div class="col-4 bod shadow">
        <h2 class="text-danger">Burgers that have been devoured</h2>
        {{#each burgers}}
        {{#if devoured}}
        <div class="bg-info m-2 shadow col-12">
            <h2 class="float-left text-white">{{this.burger_name}}</h2>
        </div>
        {{/if}}
        {{/each}}
    </div>
</div>


